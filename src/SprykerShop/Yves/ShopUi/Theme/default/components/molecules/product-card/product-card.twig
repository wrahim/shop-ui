{% extends molecule('card') %}

{% define config = {
    name: 'product-card',
    tag: 'article'
} %}

{% define data = {
    name: required,
    abstractId: required,
    url: required,
    imageUrl: required,
    price: required,
    originalPrice: null,
    product: required
} %}

{% block content %}
    {% block labels %}
        {% widget 'ProductAbstractLabelWidget' args [data.abstractId] only %}
        {% elsewidget 'ProductAbstractLabelWidgetPlugin' args [data.abstractId] only %} {# @deprecated Use ProductAbstractLabelWidget instead. #}
        {% endwidget %}
    {% endblock %}

    {% block groups %}
        {% widget 'ProductGroupWidget' args [data.product] only %}
        {% elsewidget 'ProductGroupWidgetPlugin' args [data.product] only %} {# @deprecated Use ProductGroupWidget instead. #}
        {% endwidget %}
    {% endblock %}

    {% block name %}
        <strong>{{data.name}}</strong>
    {% endblock %}

    {% block rating %}
        {% widget 'DisplayProductAbstractReviewWidget' args [data.abstractId] only %}
        {% elsewidget 'ProductAbstractReviewWidgetPlugin' args [data.abstractId] only %} {# @deprecated Use DisplayProductAbstractReviewWidget instead. #}
        {% endwidget %}
    {% endblock %}

    {% block price %}
        <p>
            {% if can('SeePricePermissionPlugin') and data.price %}
                {% include molecule('price') with {
                    data: {
                        amount: data.price | money,
                        originalAmount: data.originalPrice is empty ? null : (data.originalPrice | money)
                    }
                } only %}
            {% else %}
                {{ 'customer.access.cannot_see_price' | trans }}
            {% endif %}
        </p>
    {% endblock %}
{% endblock %}
